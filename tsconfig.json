{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["jest", "node"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*", // âœ… Ensures TypeScript compiles everything in "src/"
    "jest.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}