{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "jest",
      "node"
    ],
    "outDir": "./dist",
    "rootDir": "." // Ensure this line includes the root directory
  },
  "include": [
    "src/**/*",
    "jest.d.ts",
    "types.tsx", // Ensure this line includes the types.tsx file
    "jsx.d.ts" // Ensure this line includes the jsx.d.ts file
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
